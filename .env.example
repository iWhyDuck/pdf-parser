# PDF Parser Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# OpenAI API Key (required for AI extraction)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database connection URL
# SQLite (default, no additional setup required)
DATABASE_URL=sqlite:///extractions.db

# PostgreSQL example
# DATABASE_URL=postgresql://username:password@localhost:5432/pdf_parser

# MySQL example
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/pdf_parser

# Database connection settings
DATABASE_ECHO=false
DATABASE_POOL_TIMEOUT=20
DATABASE_POOL_RECYCLE=3600

# ===========================================
# AI/ML CONFIGURATION
# ===========================================

# OpenAI model settings
OPENAI_MODEL=gpt-3.5-turbo-1106
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=800
OPENAI_TIMEOUT=30

# Langfuse monitoring (optional)
# Sign up at: https://langfuse.com
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# ===========================================
# PROCESSING CONFIGURATION
# ===========================================

# Concurrent processing settings
MAX_WORKERS=4
BATCH_SIZE=10
PROCESSING_TIMEOUT=300

# File processing settings
CHUNK_SIZE=1048576

# ===========================================
# STREAMLIT CONFIGURATION (if using UI)
# ===========================================

# Streamlit specific settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_BASE=light

# ===========================================
# SECURITY SETTINGS
# ===========================================

# File validation settings (optional overrides)
# MAX_FILE_SIZE_MB=50
# MIN_FILE_SIZE_BYTES=100

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Development mode (enables additional debugging features)
DEVELOPMENT_MODE=false

# Test database URL (for development/testing)
TEST_DATABASE_URL=sqlite:///:memory:

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# Redis (for caching, optional)
# REDIS_URL=redis://localhost:6379/0

# Celery (for background tasks, optional)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# FastAPI (for API server, optional)
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=1

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Sentry error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Application insights (optional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string

# ===========================================
# CUSTOM REGEX PATTERNS (optional)
# ===========================================

# You can define custom extraction patterns in JSON format
# CUSTOM_PATTERNS_FILE=custom_patterns.json

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable specific features
ENABLE_AI_EXTRACTION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_DATABASE_STORAGE=true
ENABLE_MONITORING=false

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Memory limits (in bytes)
MAX_MEMORY_USAGE=1073741824

# Request timeouts (in seconds)
HTTP_TIMEOUT=30
AI_REQUEST_TIMEOUT=60

# ===========================================
# NOTES
# ===========================================
#
# 1. After copying this file to .env, update the values with your actual configuration
# 2. Never commit the .env file to version control - it's in .gitignore
# 3. For production deployment, use environment variables instead of .env files
# 4. Some features require specific dependencies - see README.md for details
# 5. Database URLs must match the driver you have installed
#
