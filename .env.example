# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_TEXT=gpt-4
OPENAI_MODEL_VISION=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Database Configuration
DATABASE_URL=sqlite:///./pdf_parser.db
DATABASE_ECHO=false

# Application Configuration
APP_NAME=PDF Parser
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# PDF Processing Configuration
PDF_MAX_FILE_SIZE_MB=50
PDF_MIN_TEXT_LENGTH=10
PDF_IMAGE_DPI=300
PDF_IMAGE_FORMAT=PNG

# AI Processing Configuration
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY_SECONDS=1
AI_TIMEOUT_SECONDS=60
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=50

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_BASE=light
MAX_UPLOAD_SIZE_MB=200

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_EXPORT_FUNCTIONALITY=true
ENABLE_HISTORY_PAGE=true
ENABLE_DETAILED_LOGGING=true

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_FILE_EXTENSIONS=pdf
MAX_FILES_PER_UPLOAD=10

# Cache Configuration
ENABLE_RESULT_CACHING=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=100

# Monitoring and Analytics
ENABLE_USAGE_ANALYTICS=false
ANALYTICS_ENDPOINT=
MONITORING_ENABLED=false
